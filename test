version: '3'
services:
  web:
    image: odoo:14.0
    depends_on:
      - mysoluci-ondb
    ports:
      - "80:8069"
      - "447:8071"
    volumes:
      - odoo-web-data:/var/lib/odoo
      - /srv/soluci-on/config:/etc/odoo
      - /srv/soluci-on/addons:/mnt/extra-addons
  mysoluci-ondb:
    image: postgres:latest
    environment:
      - POSTGRES_DB=postgres
      - POSTGRES_PASSWORD=Jack123
      - POSTGRES_USER=odoo
      - PGDATA=/var/lib/postgresql/data/pgdata
    volumes:
      - odoo-db-data:/var/lib/postgresql/data
volumes:
  odoo-web-data:
  odoo-db-data:
