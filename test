version: '3.1'
services:
  web:
    image: odoo:14.0
    depends_on:
      - mysoluci-0ndb
    ports:
      - "80:8069"
      - "447:8071"
    volumes:
      - odoo-web-data:/var/lib/odoo
      - /srv/soluci-0n/config:/etc/odoo
      - /srv/soluci-0n/addons:/mnt/extra-addons
    
  mysoluci-0ndb:
    image: postgres:latest
    environment:
      - POSTGRES_DB=postgres
      - POSTGRES_PASSWORD=Jack123
      - POSTGRES_USER=odoo
      - PGDATA=/var/lib/postgresql/data/pgdata
    volumes:
      - odoo-db-data:/var/lib/postgresql/data/pgdata
    secrets:
      - postgresql_password
volumes:
  odoo-web-data:
  odoo-db-data:

